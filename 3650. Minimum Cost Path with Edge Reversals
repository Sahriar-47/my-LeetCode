class Pair {
    int first;
    int second;
    Pair(int first, int second) {
        this.first = first;
        this.second = second;
    }
}

class Solution {
    public int minCost(int n, int[][] edges) {
        List<List<Pair>> adj = new ArrayList<>(n);
        for(int i=0; i<n; i++) {
            adj.add(new ArrayList<>());
        }
        for(int[] val: edges) {
            int u = val[0];
            int v = val[1];
            int wt = val[2];
            adj.get(u).add(new Pair(v, wt));
            adj.get(v).add(new Pair(u, 2*wt));
        }
        
        PriorityQueue<Pair> pq = new PriorityQueue<>((a, b)-> a.first - b.first);
        int[] dist = new int[n];
        for(int i=0; i<n; i++) dist[i] = (int)(1e9);
        dist[0] = 0;
        
        pq.add(new Pair(0, 0));
        while(!pq.isEmpty()) {
            Pair pair = pq.poll();
            int wt = pair.first;
            int node = pair.second;
            
            if(wt > dist[node]) continue;
            for(Pair p: adj.get(node)) {
                int child = p.first;
                int weight = p.second;
                if(dist[node] + weight < dist[child]) {
                    dist[child] = dist[node] + weight;
                    pq.add(new Pair(dist[child], child));
                }
            }
        }
        
        if(dist[n-1] == 1e9) return -1;
        return dist[n-1];
    }
}
