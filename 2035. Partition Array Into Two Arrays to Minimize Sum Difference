class Solution {
    private int lowerBound(List<Integer> list, int key) {
        int low = 0, high = list.size();

        while (low < high) {
            int mid = low + (high - low) / 2;

            if (list.get(mid) < key) {
                low = mid + 1;
            } else {
                high = mid;
            }
        }
        return low; // index
    }

    private void allSubsetSum(int ind, int cnt, int sum, int[] ar, List<Integer>[] sum1) {
        if(ind < 0) {
            sum1[cnt].add(sum);
            return;
        }

        allSubsetSum(ind-1, cnt, sum, ar, sum1);
        allSubsetSum(ind-1, cnt+1, sum+ar[ind], ar, sum1);
    }

    public int minimumDifference(int[] nums) {
        int n = nums.length;
        n /= 2;

        int[] s1 = new int[n];
        int[] s2 = new int[n];

        int totSum = 0;
        for(int i=0; i<n; i++) {
            s1[i] = nums[i];
            s2[i] = nums[i+n];
            totSum += s1[i]+s2[i];
        }

        List<Integer>[] sum1 = new ArrayList[n+1];
        for(int i=0; i<=n; i++) {
            sum1[i] = new ArrayList<>();
        }
        allSubsetSum(n-1, 0, 0, s1, sum1);

        List<Integer>[] sum2 = new ArrayList[n+1];
        for(int i=0; i<=n; i++) {
            sum2[i] = new ArrayList<>();
        }
        allSubsetSum(n-1, 0, 0, s2, sum2);

        for(int i=0; i<n; i++) {
            Collections.sort(sum2[i]);
        }

        int dif = Integer.MAX_VALUE;
        int target = totSum / 2;
        for (int i = 0; i <= n; i++) {
            for (int j = 0; j < sum1[i].size(); j++) {

                int s = sum1[i].get(j);
                int need = target - s;

                List<Integer> list = sum2[n - i];
                int idx = lowerBound(list, need);

                if (idx < list.size()) {
                    int val = list.get(idx);
                    int S = s + val;
                    dif = Math.min(dif, Math.abs(totSum - 2 * S));
                }

                if (idx > 0) {
                    int val = list.get(idx - 1);
                    int S = s + val;
                    dif = Math.min(dif, Math.abs(totSum - 2 * S));
                }
            }
        }
        
        return dif;
    }
}
