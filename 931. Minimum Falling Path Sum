class Solution {
    private int solve(int i, int j, int n, int[][] matrix, int[][] dp) {
        if(i > n-1 || j < 0 || j > n-1) {
            return (int)1e9;
        }

        if(i == n-1) {
            return matrix[n-1][j];
        }

        if(dp[i][j] != Integer.MAX_VALUE) {
            return dp[i][j];
        }

        int down = matrix[i][j] + solve(i+1, j, n, matrix, dp);
        int left = matrix[i][j] + solve(i+1, j-1, n, matrix, dp);
        int right = matrix[i][j] + solve(i+1, j+1, n, matrix, dp);

        return dp[i][j] = Math.min(down, Math.min(left, right));
    }

    public int minFallingPathSum(int[][] matrix) {
        int n = matrix.length;
        
        int[][] dp = new int[n][n];
        for(int i=0; i<n; i++) {
            Arrays.fill(dp[i], Integer.MAX_VALUE);
        }

        int mn = (int)1e9;
        for(int j=0; j<n; j++) {
            mn = Math.min(mn, solve(0, j, n, matrix, dp));
        }

        return mn;
    }
}
