class Solution {

    private int recur(String s, int ind, long num, int sign, int len) {

        if(ind >= len || !Character.isDigit(s.charAt(ind))) {
            return (int)(sign * num);
        }

        num = num * 10 + (s.charAt(ind) - '0');

        long val = sign * num;

        if(val <= Integer.MIN_VALUE) return Integer.MIN_VALUE;
        if(val >= Integer.MAX_VALUE) return Integer.MAX_VALUE;

        return recur(s, ind + 1, num, sign, len);
    }

    public int myAtoi(String s) {

        int len = s.length();
        int i = 0;

        while(i < len && s.charAt(i) == ' ') {
            i++;
        }

        int sign = 1;
        if(i < len && (s.charAt(i) == '-' || s.charAt(i) == '+')) {
            sign = (s.charAt(i) == '-') ? -1 : 1;
            i++;
        }

        return recur(s, i, 0L, sign, len);
    }
}
