class Solution {
    private void combination(int ind, int k, int sum, List<List<Integer>>ans, List<Integer> cur) {
        boolean ok = false;
        if(sum == 0 && cur.size() == k) {
           ans.add(new ArrayList<>(cur));
            return;
        }

        if(sum < 0 || ind > 9) return;

        for(int i=ind; i<=9; i++) {
            cur.add(i);
            combination(i+1, k, sum-i, ans, cur);
            cur.remove(cur.size()-1);
        }
    }
    public List<List<Integer>> combinationSum3(int k, int n) {
        List<List<Integer>> ans = new ArrayList<>();
        combination(1, k, n, ans, new ArrayList<>());
        return ans;
    }
}
